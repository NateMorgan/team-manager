<%- include("../partials/html-head")  %> 
<%- include("../partials/nav")  %> 

<main>
  <br>
  <div class="card text-center w-50" style="min-width:380px;">
    <div class="card-body">
      <h2>Announcements</h2>
      <% if (user && user.playerProfile.teams.length !== 0) { %>
        <form action="announcements/new" method="get">
          <button class="btn btn-dark"type="submit">Make an Announcement</button>
        </form>
      <% } %>
    </div>
  </div>
  <br>
  <% announcements.forEach(announce => { %>
    <p> <%= user.playerProfile %> </p>
    <p> <%= user.playerProfile.teams %> </p>
    <p> <%= announce.forTeam._id %> </p>
    <% if (user.playerProfile.teams.indexOf(announce.forTeam._id) > -1) { %>
      <div class="card w-50" style="min-width:380px;">
        <a href="announcements/<%=announce._id%>" > 
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p> <%= announce.message %> </p>
              <footer class="blockquote-footer">From <%= announce.author.name %> to <%=announce.forTeam.name%></footer>
            </blockquote>
          </div>
        </a>
        </div>
      <br>
    <% } %>
  <% }) %>
</main>

<%- include("../partials/footer")  %> 
