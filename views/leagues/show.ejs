<%- include("../partials/html-head")  %> 
<%- include("../partials/nav")  %> 

<main>
  <br>
  <div class="card text-center w-50" style="min-width:380px;">
    <div class="card-body">
      <h1> <%= league.name %> </h1>
      <br>
      <h4> <%= league.description %> </h4>
      <br>
      <h2>Teams</h2>
      <div class="div-table">
        <div class="div-thead">
            <div class="div-th"> Team </div>
            <div class="div-th"> Record </div>
        </div>
        <div class="div-tbody">
          <% league.teams.forEach(team => { %>
            <a href="/teams/<%=team._id%>" class="div-row">
              <div class="div-td"> <%= team.name %> </div>
              <div class="div-td"> N/A </div>
            </a>
          <% }) %>
        </div>
      </div>
      <br>
      <% if (user) { %>
        <% if (user.playerProfile._id.equals(league.coordinator._id)){ %>
          <form action="/leagues/<%=league._id%>/edit" method="GET">
            <button class="btn btn-dark" type="submit"> Edit League </button>
          </form>
        <% } %>
      <% } %>
    </div>
  </div>
</main>

<%- include("../partials/footer")  %> 